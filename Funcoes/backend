# Colocar as funcoes relacionadas a calculos e backend
.macro num2img( %num %casas ) # recebe um numero em reg e sua potencia de 10 em imm e.g. 100, e devolve no a0 a imagem correspondente
	li a1 %casas
	div a1 %num a1
	
	# confere um por um para achar qual numero correto
	la a0 zerow
	beqz a1 fim

	la a0 um
	li a2 1
	beq a1 a2 fim
	
	la a0 dois
	li a2 2
	beq a1 a2 fim
	
	la a0 tres
	li a2 3
	beq a1 a2 fim
	
	la a0 quatro
	li a2 4
	beq a1 a2 fim
	
	la a0 cinco
	li a2 5
	beq a1 a2 fim
	
	la a0 seis
	li a2 6
	beq a1 a2 fim
	
	la a0 sete
	li a2 7
	beq a1 a2 fim
	
	la a0 oito
	li a2 8
	beq a1 a2 fim
	
	# se nao foi os de cima´eh nove
	la a0 nove
	fim:
	ret
.end_macro

