# Colocar as funcoes relacionadas a calculos e backend
.macro num2img( %num %casas ) # recebe um numero em reg e sua potencia de 10 em imm e.g. 100, e devolve no a0 a imagem correspondente
	add a3 zero %casas
	div a3 %num a3
	li a0 10
	mul a0 %casas a0
	rem a3 a3 a0
	
	# confere um por um para achar qual numero correto
	la a0 zerow
	beqz a3 fim

	la a0 um
	li a2 1
	beq a3 a2 fim
	
	la a0 dois
	li a2 2
	beq a3 a2 fim
	
	la a0 tres
	li a2 3
	beq a3 a2 fim
	
	la a0 quatro
	li a2 4
	beq a3 a2 fim
	
	la a0 cinco
	li a2 5
	beq a3 a2 fim
	
	la a0 seis
	li a2 6
	beq a3 a2 fim
	
	la a0 sete
	li a2 7
	beq a3 a2 fim
	
	la a0 oito
	li a2 8
	beq a3 a2 fim
	
	# se nao foi os de cima´eh nove
	la a0 nove
	fim:
	ret
.end_macro

.macro time2img( %numFrames %gifLabel ) # recebe um numero em reg e sua potencia de 10 em imm e.g. 100, e devolve no a0 a imagem correspondente
	la a1 %gifLabel
	rem a3 s3 %numFrames
	
	# confere um por um para achar qual numero correto
	la a0 (a1)
	beqz a3 fim

	la a0 4(a1)
	li a2 1
	beq a3 a2 fim
	
	la a0 8(a1)
	li a2 2
	beq a3 a2 fim
	
	la a0 12(a1)
	li a2 3
	beq a3 a2 fim
	
	la a0 16(a1)
	li a2 4
	beq a3 a2 fim
	
	la a0 cinco
	li a2 5
	beq a3 a2 fim
	
	la a0 seis
	li a2 6
	beq a3 a2 fim
	
	la a0 sete
	li a2 7
	beq a3 a2 fim
	
	la a0 oito
	li a2 8
	beq a3 a2 fim
	
	# se nao foi os de cima´eh nove
	la a0 nove
	fim:
	ret
.end_macro

.macro getInputFlipper()
	li a1,0xFF200000	# carrega o endereço de controle do KDMMIO
	lw a0,0(a1)			# Le bit de Controle Teclado
	andi a0,a0,0x0001		# mascara o bit menos significativo
   	beq a0,zero,fim   	   	# Se não há tecla pressionada então vai para FIM
  	lw a2,4(a1)  			# le o valor da tecla tecla
	jal return
	return: addi ra ra 20
	li a0 97
	beq a2 a0 FlipperEsquerdo	# criar Label que usa isto no arquivo main
	li a0 100
	beq a2 a0 FlipperDireito	# criar Label que usa isto no arquivo main
	fim:
.end_macro
