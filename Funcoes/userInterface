.data

# Colocar as funcoes relacionadas a UI
.macro alterScoreP1( ) # altera o score recebendo tres IMM
	li t4 1000
	li t5 10
	li t6 3
	li a1 playerOneScore			# endereco destino dentro da bitmap
	printStringln(diagonamos)
	start:
	div t4 t4 t5
	addi t6 t6 -1
	jal  N2IP1
	N2IP1: num2img( s3 t4 )

	addi a1 a1 16
	lw a2 4(a0) 				# altura
	lw a3 0(a0) 				# largura
	addi a0 a0 8				# vetor de bytes origem 
	for_linhas:	
		blez a2 fim	# enquanto a2 > 0 print
		mv t0 a1			# endereco do inicio linha atual
		mv t1 a3			# t1 = largura
		for_colunas:	
			blez t1 fim_da_largura # enquanto t1 > 0
			lw t2 0(a0)		# le uma word do vetor
			sw t2 0(t0)		# Salva no display a word lida do vetor 
			addi a0 a0 4		# a0 += 1
			addi t0 t0 4		# t0 += 1
			addi t1 t1 -4		# t1 -=1
			j for_colunas
		fim_da_largura:
			addi a1 a1 320 		# desceu uma linha
			addi a2 a2 -1		# a2--
			j for_linhas
	fim:
	li t0 -5120
	add a1 a1 t0
	bnez t6 start
	
.end_macro

# Colocar as funcoes relacionadas a UI
.macro alterScoreP2( ) # altera o score recebendo tres IMM
	li t4 1000
	li t5 10
	li t6 3
	li a1 playerTwoScore			# endereco destino dentro da bitmap
	start:
	div t4 t4 t5
	addi t6 t6 -1
	jal  N2IP2
	N2IP2: num2img( s4 t4 )
	addi a1 a1 16
	lw a2 4(a0) 				# altura
	lw a3 0(a0) 				# largura
	addi a0 a0 8				# vetor de bytes origem 
	for_linhas:	
		blez a2 fim	# enquanto a2 > 0 print
		mv t0 a1			# endereco do inicio linha atual
		mv t1 a3			# t1 = largura
		for_colunas:	
			blez t1 fim_da_largura # enquanto t1 > 0
			lw t2 0(a0)		# le uma word do vetor
			sw t2 0(t0)		# Salva no display a word lida do vetor 
			addi a0 a0 4		# a0 += 1
			addi t0 t0 4		# t0 += 1
			addi t1 t1 -4		# t1 -=1
			j for_colunas
		fim_da_largura:
			addi a1 a1 320 		# desceu uma linha
			addi a2 a2 -1		# a2--
			j for_linhas
	fim:
	li t0 -5120
	add a1 a1 t0
	bnez t6 start
	
.end_macro
